<%= form_for(@contact) do |f| %>
  <% if @contact.errors.any? %>
    <div class="alert alert-danger">
      The form contains <%= pluralize(@contact.errors.count, "error") %>.
      <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </p>
  <p>
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </p>
  <p>
    <%= f.submit 'Submit', class: "btn btn-large btn-default" %>
  </p>
<% end %>